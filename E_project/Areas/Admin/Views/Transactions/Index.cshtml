@model IEnumerable<E_project.Models.Transaction>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Transactions</h2>
<div class="row pb-2 pt-2">
    <div class="col-6">
        <span>
            <a asp-action="Create" class="btn btn-outline-success">Create New</a>
        </span>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Success)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card.CardName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Image" alt="Transaction Image" width="50px" />
                </td>
                <td>
                    @(item.CreationDate.HasValue ? item.CreationDate.Value.ToString("dd/MM/yyyy") : "N/A")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Success)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Card.CardName)
                </td>
                <td class="project-actions">
                    <a asp-action="Details" asp-route-id="@item.TransactionId" class="btn btn-outline-info btn-sm" data-toggle="tooltip" title="View Details">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.TransactionId" class="btn btn-outline-primary btn-sm" data-toggle="tooltip" title="Edit">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.TransactionId" class="btn btn-outline-danger btn-sm" data-toggle="tooltip" title="Delete">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
