@model IEnumerable<E_project.Models.Feedback>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Feedbacks</h2>
<div class="row pb-2 pt-2">
    <div class="col-6">
        <span>
            <a asp-action="Create" class="btn btn-outline-success">Create New</a>
        </span>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountId)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <style>
                        .truncate {
                            white-space: nowrap;
                            overflow: hidden;
                            text-overflow: ellipsis;
                            width: 300px; /* Chỉnh độ rộng phù hợp */
                        }
                    </style>
                    <div class="truncate">
                        @Html.DisplayFor(modelItem => item.Content)
                    </div>
                </td>
                <td>
                    @(item.CreationDate.HasValue ? item.CreationDate.Value.ToString("dd/MM/yyyy") : "N/A")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountId)
                </td>
                <td class="project-actions">
                    <a asp-action="Details" asp-route-id="@item.FeedbackId" class="btn btn-outline-info btn-sm" data-toggle="tooltip" title="View Details">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
