@{
    var path = Context.Request.Path;
}

<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
    <form class="form-inline ml-3" asp-action="Search" asp-controller="Home" asp-area="Admin">
        <div class="input-group input-group-sm">
            <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search" name="search" value="@ViewBag.search" />
            <input type="hidden" name="path" value="@path"/>
            <input type="hidden" name="categoryId" value="@ViewBag.id"/>
            <input type="hidden" name="date" value="@ViewBag.date" />
            <div class="input-group-append">
                <button class="btn btn-navbar" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </form>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" asp-action="Logout" asp-controller="Home" asp-area="Admin" data-toggle="tooltip" title="Logout">
                <i class="fas fa-arrow-circle-right"></i>
            </a>
        </li>
    </ul>
</nav>
